{
  "hostRequirements": {
    "cpus": 8,
    "memory": "32gb"
  },
  "overrideCommand": false,
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers-contrib/features/kind:1": {}
  },
  "mounts": [
    "source=var-lib-docker,target=/var/lib/docker,type=volume",
    "source=kube,target=/home/vscode/.kube,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [    
        "GitHub.github-vscode-theme",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-java-test",
        "vscjava.vscode-java-debug",
        "redhat.java",
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-spring-boot-dashboard",
        "vmware.vscode-spring-boot"
      ]
    }
  },
  "remoteUser": "root",
  "runArgs": [
    "--privileged",
    "--init"
  ],
  "onCreateCommand": "echo PS1='\"$ \"' >> ~/.bashrc && echo 'alias k=\"kubectl\"' >> ~/.bashrc",
  "postCreateCommand": "sudo apt update && sudo apt install -y postgresql-client",
  "postAttachCommand": "git pull --all"
}
